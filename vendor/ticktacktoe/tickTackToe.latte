{block content}

<h1>Tick Tack Toe</h1>

<a n:href="newGame!" class="ajax">new game</a>

<div id="message">
	{snippet message}
		{if isset($message)}
			<p>{$message}</p>
		{/if}
	{/snippet}
</div>

<div id="playboard">

	{snippet board}
		{foreach $board as $row}

			<div class="row">

				{foreach $row as $square}
					{if $square->isBlank()}
						{if $hasWinner}
							<div class="square"></div>
						{else}
							<a n:href="makeMove! $square->getX(), $square->getY()" class="ajax square"></a>
						{/if}
					{else}
						<div class="square {$square->getShape()}"></div>
					{/if}
				{/foreach}

			</div>

		{/foreach}
	{/snippet}

</div>